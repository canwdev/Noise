<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="开关（部分设置重启应用生效）">

        <SwitchPreference
            android:defaultValue="true"
            android:key="switch_enable_drawer_ssound"
            android:summary="模拟红警2菜单滑动"
            android:title="抽屉音效" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="switch_enable_button_touch"
            android:summary="触摸按钮时发出声音"
            android:title="按钮触摸事件" />
    </PreferenceCategory>
    <PreferenceCategory android:title="循环设置（毫秒）">

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="check_box_enable_loop_play"
            android:summary="重复循环播放同一项目将无法正常停止"
            android:title="允许重复循环播放" />
        <EditTextPreference
            android:defaultValue="1500"
            android:dialogIcon="@drawable/ic_star_yellow_500_24dp"
            android:inputType="numberDecimal"
            android:key="audio_play_interval"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="固定播放间隔" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="audio_play_random_interval"
            android:summary="会有玄学效果，固定间隔将被忽略"
            android:title="启用随机播放"
            android:visibility="invisible" />
        <EditTextPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:defaultValue="1000"
            android:dependency="audio_play_random_interval"
            android:dialogIcon="@drawable/ic_star_yellow_500_24dp"
            android:inputType="numberDecimal"
            android:key="edit_text_preference_1"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="随机间隔：短时间" />
        <EditTextPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:defaultValue="1000"
            android:dependency="audio_play_random_interval"
            android:dialogIcon="@drawable/ic_star_yellow_500_24dp"
            android:inputType="numberDecimal"
            android:key="edit_text_preference_1"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="随机间隔：长时间" />
    </PreferenceCategory>

</PreferenceScreen>