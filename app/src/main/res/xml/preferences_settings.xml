<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="开关（部分设置重启应用生效）">

        <SwitchPreference
            android:defaultValue="true"
            android:key="switch_enable_drawer_ssound"
            android:summary="红警2菜单滑动音效"
            android:title="抽屉音效" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="switch_enable_button_touch"
            android:summary="触摸条目时发声"
            android:title="触摸事件" />
    </PreferenceCategory>
    <PreferenceCategory android:title="循环设置（长按条目循环播放）">

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="check_box_enable_multiLoop"
            android:summaryOff="关闭"
            android:summaryOn="禁忌 · 多重存在"
            android:title="允许重复" />
        <EditTextPreference
            android:defaultValue="1500"
            android:dialogIcon="@drawable/ic_timer_white_24dp"
            android:inputType="numberDecimal"
            android:key="audio_play_interval"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="固定间隔（毫秒）" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="check_box_enable_advancedInterval"
            android:summary="该功能将随机播放几次短间隔，让后延迟一段长间隔，并且循环（固定间隔将被忽略）"
            android:title="高级间隔（毫秒）" />
        <EditTextPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:defaultValue="2000"
            android:dependency="check_box_enable_advancedInterval"
            android:dialogIcon="@drawable/ic_timer_white_24dp"
            android:inputType="numberDecimal"
            android:key="advancedInterval_short"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="高级间隔：短时间" />
        <EditTextPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:defaultValue="20000"
            android:dependency="check_box_enable_advancedInterval"
            android:dialogIcon="@drawable/ic_timer_white_24dp"
            android:inputType="numberDecimal"
            android:key="advancedInterval_long"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="高级间隔：长时间" />
    </PreferenceCategory>

</PreferenceScreen>